<script>
	function disable() {
		$(window).on('wheel.impair', function() {
			return false;
		});
	}

	function enable() {
		$(window).off('wheel.impair');
	}

	$(document).ajaxStart(function() {
		$('.loader').css({
			'display': 'block'
		})
		disable();
		console.log('loading...');
	}).ajaxStop(function() {

		setInterval(function() {
			$('.loader').css({
				'display': 'none'
			})
			enable();
		}, 800);
		console.log('stop');
	});


	$(document).ready(function() {
		var data = {};

		$.ajax({
			type: 'POST',
			data: JSON.stringify(data),
			contentType: 'application/json',
			url: '/see/other/users',
			success: function(res) {
				$('.profiles').html(res);
			}
		});
	})
</script>
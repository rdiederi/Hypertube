<!-- Font Awesome -->
<script src="https://twitter.github.io/typeahead.js/js/handlebars.js"></script>
<link rel='stylesheet prefetch' href='https://fonts.googleapis.com/icon?family=Material+Icons'>
<link rel="stylesheet" href="/stylesheets/home.css">
<script src="/javascripts/home.js"></script>
<div class="body-wrapper">

	<div class="loader">
		<div class="load-spin">

			<div class="fa-3x">
				<i class="fas fa-spinner fa-spin"></i>
			</div>

		</div>
	</div>

	<div class="head">
		<nav class="navbar navbar-expand-md navbar-light bg-light">
			<a class="navbar-brand" href="/user/profile"><img {{#if pic}} src="{{pic}}" {{else}} src="/images/avatar.png"
				 {{/if}} width="40" height="40" class="d-inline-block align-top" alt=""></a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02"
			 aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarTogglerDemo02">
				<ul class="navbar-nav mr-auto mt-2 mt-lg-0">
					<li class="nav-item active">
						<a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt"></i></a>
						<span class="tooltiptext">
							<div class="speech-bubble">Logout</div>
						</span>
					</li>
					<li class="nav-item active">
						<a class="nav-link" href="/user/profile"><i class="fas fa-cogs"></i></a>
						<span class="tooltiptext">
							<div class="speech-bubble">Setting</div>
						</span>
					</li>
					<li class="nav-item active">
						<a class="nav-link" href="/other/users"><i class="fas fa-users"></i></a>
						<span class="tooltiptext">
							<div class="speech-bubble">Users</div>
						</span>
					</li>
					<li class="nav-item active" id="search_btn">
						<a class="nav-link"><i class="fas fa-search"></i></a>
						<span class="tooltiptext">
							<div class="speech-bubble">Search</div>
						</span>
					</li>
				</ul>
			</div>
		</nav>
		<div class="container">
			{{#if success_msg}}
			<div id="errors" class="alert alert-success text-center" role="alert">{{success_msg}}</div>
			{{else if error}}
			<div id="errors" class="alert alert-danger text-center" role="alert">{{error}}</div>
			{{/if}}
			<form id="search_form">
				<div class="row">
					<div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
						<div class="input-group">
							<input type="text" class="form-control" placeholder="Search" id="search" name="search" />
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
	<div class="containers">
		<div class="btn-group d-flex justify-content-center" id="sort-btn">
			<button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true"
			 aria-expanded="false">
				Sort By
			</button>
			<div class="dropdown-menu">
				<div class="dropdown-item" value="date">Release Date</div>
				<div class="dropdown-item" value="title">Title</div>
				<div class="dropdown-item" value="vote-average">Rating</div>
			</div>
		</div>
		<div class="gala">
		</div>
	</div>
	<div class="container movie-desc">
		<div class="row justify-content-center align-items-center">
			<div class="box">
				<div class="cancel">
					<img style="width:100%;height:100%" src="/images/cancel.svg" id="cancel">
				</div>
				{{!--
				<hr class="my-4 d-flex"> --}}

			</div>
			<a class="movie_link" href="">
				<div class="play_btn">
					<img src="/images/play_btn.svg" id="start_play">
				</div>
			</a>
			<div class="vid_desc text-center">
				<h1></h1>
				<p class="overview"></p>
			</div>
		</div>
	</div>
</div>
<nav aria-label="Page navigation example" class="pagi d-none">
	<ul class="pagination justify-content-center">
		<li class="page-item" value="prev">
			<a class="page-link" tabindex="-1">Prev</a>
		</li>
		<li class="page-item" value="next">
			<a class="page-link">Next</a>
		</li>
	</ul>
</nav>
